{
  "name": "total-serialism",
  "version": "2.0.0",
  "description": "Total Serialism - Generative art tools for pen plotting and creative coding",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8080",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js --fix"
  },
  "keywords": [
    "generative-art",
    "pen-plotter",
    "p5js",
    "creative-coding",
    "total-serialism",
    "algorithmic-art"
  ],
  "author": "David Murray",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!*.config.js",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
